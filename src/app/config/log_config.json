{
  "version": 1,
  "formatters": {
    "default": {
      "format": "[%(asctime)s] %(levelname)s in %(module)s: %(message)s",
      "datefmt": "%d-%m-%y %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stdout",
      "formatter": "default"
    },

    "file": {
      "class": "logging.FileHandler",
      "filename": "tmp/logs/flask.log",
      "formatter": "default"
    }
  },
  "root": { "level": "DEBUG", "handlers": ["console", "file"] }
}
